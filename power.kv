<MainPage>:
    RelativeLayout:
        size: root.size
        pos: root.pos
        canvas:
            Color:
                rgba: 1, 1, 1, 0.95
            Rectangle:
                pos: root.pos
                size: root.size
        orientation: 'vertical'
        Label:
            text: "Device Password:"
            color: 0, 0, 0, 1
            bold: True
            pos: 0, 1100
            size_hint: 1, 0.05
        TextInput:  #
            id: pw
            password: True
            size_hint: 0.25, 0.05
            pos_hint: {'center_x': 0.5, 'center_y': 0.88}
            background_color: 0, 0, 0, 1
            foreground_color: 1, 1, 1, 1
            text: '0'
            multiline: False
        PowerButton:
            id: power_button
            source: 'images/power_button_green.png'
            size_hint: 0.25, 0.25  # proportion
            pos_hint: {'center_x': 0.5, 'center_y': 0.69}
            allow_stretch: False
            on_state:
                if self.state == 'normal1': self.source = 'images/power_button_green.png'
                if self.state == 'normal2': self.source = 'images/power_button_red.png'
                if self.state == 'down': self.source = 'images/power_button_yellow.png'
            on_press:
                if self.prev_state == 'normal1': self.seconds = root.calculate_time()
                else: self.seconds = root.stop_timer()
        RelativeLayout:
            pos: 5, 0.5
            size_hint: 1, 0.038
            orientation: 'horizontal'
            Label:
                text: "Hours:"
                color: 0, 0, 0, 1
                bold: True
                pos_hint: {'center_x': 0.4, 'center_y': 13}
            Label:
                text: "Minutes:"
                color: 0, 0, 0, 1
                bold: True
                size_hint: 0.05, 1
                pos_hint: {'center_x': 0.5, 'center_y': 13}
            Label:
                text: "Seconds:"
                color: 0, 0, 0, 1
                bold: True
                size_hint: 0.05, 1
                pos_hint: {'center_x': 0.6, 'center_y': 13}
            TextInput:  # hours
                id: hours
                size_hint: 0.05, 1
                pos_hint: {'center_x': 0.4, 'center_y': 12}
                background_color: 0, 0, 0, 1
                foreground_color: 1, 1, 1, 1
                text: '0'
                multiline: False
                width:
                input_type: 'number'
            TextInput:  # minutes
                id: minutes
                size_hint: 0.05, 1
                pos_hint: {'center_x': 0.5, 'center_y': 12}
                background_color: 0, 0, 0, 1
                foreground_color: 1, 1, 1, 1
                text: '0'
                multiline: False
                width:
                input_type: 'number'
            TextInput:  # minutes
                id: seconds
                size_hint: 0.05, 1
                pos_hint: {'center_x': 0.6, 'center_y': 12}
                background_color: 0, 0, 0, 1
                foreground_color: 1, 1, 1, 1
                text: '0'
                multiline: False
                width:
                input_type: 'number'
        BackgroundLabel:
            id: stopwatch
            text: '0'
            color: 1, 1, 1, 1
            pos: 0, -200
            font_size: 40
            bold: True
            canvas.before:
                Color:
#                    rgba: 1, 0.86, 0, 1
                    rgba: 0, 0, 0, 1
                Ellipse:
                    pos: self.center_x-75, self.center_y-75
                    size: 150, 150